
<h1>Welcome, {{user.email}}!</h1>

<h1>Your Dashboard</h1>
<a href="/post">Create New Post</a>

{{#if posts.length}}
  {{#each posts}}
    <div class="post-item">
      <h2><a href="/dashboard/{{id}}">{{title}}</a></h2>
      <a href="/dashboard/{{id}}">Edit</a>
      <form action="/dashboard/post/{{id}}?_method=DELETE" method="POST" style="display:inline;">
        <button type="submit">Delete</button>
      </form>
    </div>
  {{/each}}
{{else}}
  <p>You have no posts yet.</p>
{{/if}}
